{
  "name": "KtivApp",
  "version": "0.1.0",
  "description": "Hebrew to Arabic transcription desktop app",
  "author": "Tom Rossner",
  "private": false,
  "main": "electron/main.js",
  "dependencies": {
    "electron-updater": "^6.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1"
  },
  "scripts": {
    "dev": "vite",
    "dist": "npm run clean:dist && npm run electron:dist",
    "clean:dist": "rm -rf dist-electron",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:pack": "electron-builder",
    "electron:dist": "npm run build && electron-builder",
    "test": "vitest"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ktivapp.app",
    "productName": "KtivApp",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "TomRossner",
      "repo": "ktivapp"
    },
    "win": {
      "target": "nsis",
      "icon": "public/logo512.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/logo512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/logo512.png"
    }
  }
}
